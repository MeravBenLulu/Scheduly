{
    "appenders": {
      "file": {
        "type": "file",
        "filename": "logs/app.log",
        "flags": "w",
        "maxLogSize": 10485760,
        "backups": 3,
        "compress": true
      },
      "console": {
        "type": "console"
      }
    },
    "categories": {
        "default": {
            "appenders": ["file"],
            "level": "info"
        },
      "server": {
        "appenders": ["file"],
        "level": "info"
      }
    }
  }
  